{
    "name": "analytics-ui",
    "version": "1.0.0",
    "description": "The OBC Verkaufscoach frontend",
    "main": "main.ts",
    "license": "MIT",
    "scripts": {
        "build": "node config/build.js",
        "dev": "webpack-dev-server --inline --progress --config config/webpack.dev.conf.js",
        "unit": "tsc --noEmit -p test/tsconfig.test.json && jest --config config/jest.conf.js --coverage",
        "unit:watch": "jest --watch --config config/jest.conf.js",
        "unit:clearCache": "jest --clearCache",
        "test": "npm run unit",
        "format": "tsfmt -r $(find config src test -name '*.js' -or -name '*.ts')  --no-tslint --no-tsconfig --no-editorconfig",
        "lint:config": "tslint -c tslint.json config/**/*.js",
        "lint:main": "tslint -c tslint.json -p tsconfig.json src/**/*.ts",
        "lint:test": "tslint -c tslint.json -p test/tsconfig.test.json test/**/*.{ts,js}",
        "lint": "npm-run-all --parallel lint:main lint:config lint:test"
    },
    "dependencies": {
        "bootstrap": "^4.1.1",
        "bootstrap-vue": "^2.0.0-rc.9",
        "vue": "^2.5.13",
        "vue-router": "^3.0.1",
        "vuex": "^3.0.1",
        "vuex-persistedstate": "^2.5.3"
    },
    "devDependencies": {
        "@types/jest": "^22.1.0",
        "@types/lodash": "^4.14.102",
        "@types/node": "^9.4.0",
        "@vue/test-utils": "^1.0.0-beta.11",
        "babel-core": "^6.26.0",
        "babel-jest": "^22.1.0",
        "babel-loader": "^7.1.2",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-plugin-transform-vue-jsx": "^3.5.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-stage-2": "^6.24.1",
        "chalk": "^2.3.0",
        "compression-webpack-plugin": "^1.1.3",
        "copy-webpack-plugin": "^4.3.1",
        "css-loader": "^0.28.9",
        "extract-text-webpack-plugin": "^3.0.2",
        "friendly-errors-webpack-plugin": "^1.6.1",
        "html-webpack-plugin": "^2.30.1",
        "jest": "^22.1.3",
        "jest-localstorage-mock": "^2.2.0",
        "npm-run-all": "^4.1.2",
        "optimize-css-assets-webpack-plugin": "^3.2.0",
        "ora": "^1.3.0",
        "path": "^0.12.7",
        "rimraf": "^2.6.2",
        "semver": "^5.5.0",
        "shelljs": "^0.8.0",
        "style-loader": "^0.21.0",
        "ts-jest": "^22.0.1",
        "ts-loader": "^3.2.0",
        "tslint": "^5.9.1",
        "tslint-loader": "^3.5.3",
        "typescript": "~2.6.2",
        "typescript-formatter": "^7.1.0",
        "url-loader": "^0.6.2",
        "vue-class-component": "^6.2.0",
        "vue-jest": "^1.4.0",
        "vue-loader": "^13.7.0",
        "vue-property-decorator": "^6.0.0",
        "vue-template-compiler": "^2.5.13",
        "vuex-class": "^0.3.1",
        "webpack": "^3.10.0",
        "webpack-bundle-analyzer": "^2.9.2",
        "webpack-dev-server": "^2.11.0",
        "webpack-merge": "^4.1.1"
    },
    "engines": {
        "node": ">= 6.0.0",
        "npm": ">= 3.0.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ]
}
